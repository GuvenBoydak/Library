@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Üye Giriş</h5>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form asp-controller="Users" asp-action="Login" method="post">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input type="email" asp-for="Email" value="admin@admin.com" class="form-control">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input type="password" asp-for="Password" value="123456" class="form-control">
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>                 
                    <div>
                        <button type="submit" class="btn btn-primary">Giriş yap</button>
                        <a class="btn btn-warning" asp-controller="Users" asp-action="Register">Yeni Kayıt</a>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
</div>

